    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inset">0dp</item>
        <item name="android:backgroundTint">@color/buttons_bg</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">23sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="NumDelText" parent="CalculatorButton">
        <item name="android:textColor">@color/num_del_text</item>
    </style>

    <style name="ActionButton" parent="CalculatorButton">
        <item name="android:textColor">@color/action_text</item>
    </style>

    <style name="EqualBotton" parent="CalculatorButton">
        <item name="android:textColor">@color/equal_button_txt</item>
        <item name="android:backgroundTint">@color/equal_button_bg</item>
    </style>

